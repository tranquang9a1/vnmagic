<!-- Navbar goes here -->
<div id="user-page">
  <header>
    <nav class="top-nav primary-color">
      <div class="nav-wrapper">
        <a href="/scp" class="breadcrumb">SCP</a>
        <a class="breadcrumb">STORE</a>
      </div>
    </nav>
    <%- partial ('site-menu.ejs') %>
  </header>

  <!-- Page Layout here -->
  <main id="main-store">
    <div class="container">

      <% if(foundStore.length > 0) { %>
      <div class="row">
        <div class="col s12">
          <div class="card">
            <div class="card-image">
              <img src="/images/shopify-banner.png">
              <span class="card-title"><%= foundStore[0].name %></span>
            </div>
            <div class="card-content">
              <p>I am a very simple card. I am good at containing small bits of information.
                I am convenient because I require little markup to use effectively.</p>
            </div>
            <div class="card-action">
              <a href="#">This is a link</a>
            </div>
          </div>
        </div>
      </div>
      <% } else { %>
      <%- partial ('connect-store') %>
      <% } %>
    </div>
  </main>


</div>

